/* === Home JS === */
/* lazy-load hero image for speed */
const heroImg = new Image();
heroImg.src = "../Images/pharmacist-work.jpg";
heroImg.decode().then(() => {
  document.querySelector('.hero .body-img').src = heroImg.src;
});

/* live search across all pages (simple filter) */
function searchFunction() {
  const q = document.getElementById('search').value.toLowerCase();
  const pages = [
    {title:'Home', url:'../Home Index/index.html'},
    {title:'Services', url:'../Services/services.html'},
    {title:'Contact', url:'../Contact/contact.html'}
  ];
  const out = pages.filter(p => p.title.toLowerCase().includes(q));
  const box = document.getElementById('search-results') || (()=>{
    const d=document.createElement('div'); d.id='search-results';
    d.style.cssText='position:absolute;top:100%;left:0;background:#fff;border:1px solid #ccc;z-index:9999;max-width:300px;';
    document.querySelector('nav ul').appendChild(d); return d;
  })();
  box.innerHTML = out.map(p=>`<a href="${p.url}" style="display:block;padding:8px;">${p.title}</a>`).join('') || '<span style="padding:8px;">No match</span>';
  box.style.display = out.length ? 'block' : 'none';
}
document.getElementById('search').addEventListener('input', searchFunction);
</script>
